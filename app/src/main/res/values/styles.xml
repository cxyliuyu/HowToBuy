<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabIcon" >
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="TabText" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@drawable/textcolor_gray2black</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="TabLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/bottom_image_sel</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="home_table_item_layout">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="home_table_item_inage">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:src">@drawable/table_image1</item>

    </style>
    <style name="home_table_item_text">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
</resources>
